<h4>Invoices</h4>

<table>
  <thead>
    <tr>
      <th>Invoice ID</th>
      <th>Your Business</th>
      <th>Client</th>
      <th>Issued</th>
      <th>Due</th>
      <th>Subject</th>
      <th>Notes</th>
      <th>Paid?</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  {{#each invoice in model}}
    <tr>
      <td>{{#link-to 'invoice' invoice.id}}{{invoice.invoiceID}}{{/link-to}}</td>
      <td>{{invoice.entityName}}</td>
      <td>{{invoice.clientName}}</td>
      <td>{{invoice.issueDate}}</td>
      <td>{{invoice.dueDate}}</td>
      <td>{{invoice.subject}}</td>
      <td>{{invoice.notes}}</td>
      <td>{{yes-no invoice.isPaid}}</td>
      <td>{{#link-to 'invoice' invoice.id class='button'}}Details{{/link-to}}</td>
    </tr>
  {{/each}}
  </tbody>
</table>

{{#link-to 'invoices.new' class='button button-primary'}}{{fa-icon 'fa-plus'}} New Invoice{{/link-to}}
